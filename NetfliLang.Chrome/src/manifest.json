{
  "name": "NetfliLang",
  "version": "0.0.1",
  "description": "Watch Netflix and take advantage of free line-by-line translations to 50+ languages. Is it too fast? Donâ€™t worry, slow down the video or use the auto-pause function so you never miss a word again.",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "storage",
    "https://www.netflix.com/*",
    "https://translate.google.com/*"
  ],
  "background": {
    "scripts": ["runtime.js", "background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*"],
      "js": ["runtime.js", "netflix.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://translate.google.com/*"],
      "js": ["runtime.js", "translator.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "index.html",
    "runtime.js",
    "polyfills.js",
    "styles.js",
    "vendor.js",
    "main.js",
    "*.js.map",
    "netflixInterceptor.js"
  ],
  "icons": {
    "128": "assets/icon-128.png"
  }
}
